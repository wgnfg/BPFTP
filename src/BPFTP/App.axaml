<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="BPFTP.App"
			 xmlns:utils="using:BPFTP.Utils"
             RequestedThemeVariant="Default">
             <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->
	<Application.DataTemplates>
		<utils:ViewLocator/>
	</Application.DataTemplates>
    <Application.Styles>
        <FluentTheme />
    </Application.Styles>
    <Application.Resources>
        <!-- 目前不带似乎会导致安卓平台下无法正常显示字体 -->
        <FontFamily x:Key="DefaultFontFamily">Microsoft YaHei</FontFamily>
	    <FontFamily x:Key="ContentControlThemeFontFamily">Microsoft YaHei</FontFamily>
        <FontFamily x:Key="TextBlockThemeFontFamily">Microsoft YaHei</FontFamily>
    </Application.Resources>
</Application>
