<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="clr-namespace:BPFTP.ViewModels"
             x:Class="BPFTP.Views.EditConnection"
			 x:DataType="vm:EditConnectionViewModel">
	<Border Background="Gray"
			BorderBrush="Gray"
			BorderThickness="1"
			CornerRadius="5"
			Padding="20">
		<StackPanel Spacing="10">
			<StackPanel.Styles>
				<Style Selector="StackPanel > TextBlock">
					<Setter Property="Width" Value="100"/>
				</Style>
				<Style Selector="StackPanel > TextBox">
					<Setter Property="Width" Value="100"/>
				</Style>
				<Style Selector="StackPanel > TextBox">
					<Setter Property="Width" Value="100"/>
				</Style>
			</StackPanel.Styles>
			<TextBlock Text="编辑连接信息" FontSize="18" Width="120" FontWeight="Bold"/>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="名称:"/>
				<TextBox Text="{Binding Profile.Name}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="IP地址:"/>
				<TextBox Text="{Binding Profile.Host}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="端口:"/>
				<NumericUpDown Value="{Binding Profile.Port}" Minimum="1" Maximum="65535"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="用户名:"/>
				<TextBox Text="{Binding Profile.Username}"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal">
				<TextBlock Text="验证方式:"/>
				<ComboBox ItemsSource="{Binding AuthMethods}" SelectedItem="{Binding Profile.AuthMethod}"/>

			</StackPanel>


			<StackPanel  Orientation="Horizontal" IsVisible="{Binding IsPasswordAuth}">
				<TextBlock Text="密码:"/>
				<TextBox Text="{Binding Profile.Password}" PasswordChar="*"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" IsVisible="{Binding IsPrivateKeyAuth}">
				<TextBlock Text="私钥路径:"/>
				<TextBox Text="{Binding Profile.PrivateKeyPath}"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" IsVisible="{Binding IsPrivateKeyAuth}">
				<TextBlock Text="私钥密码 (可选):"/>
				<TextBox Text="{Binding Profile.PrivateKeyPassword}" PasswordChar="*"/>
			</StackPanel>

			<StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Spacing="10" Margin="0 15 0 0">
				<Button Content="保存" Command="{Binding ConfirmCommand}" IsDefault="True"/>
				<Button Content="取消" Command="{Binding CancelCommand}" IsCancel="True"/>
			</StackPanel>
		</StackPanel>
	</Border>
</UserControl>
